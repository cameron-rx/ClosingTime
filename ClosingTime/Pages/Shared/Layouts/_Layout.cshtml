<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Closing Time</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/ClosingTime.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/beercss@3.13.1/dist/cdn/beer.min.css" rel="stylesheet" />
    <script type="module" src="https://cdn.jsdelivr.net/npm/beercss@3.13.1/dist/cdn/beer.min.js"></script>
    <script type="module"
        src="https://cdn.jsdelivr.net/npm/material-dynamic-colors@1.1.2/dist/cdn/material-dynamic-colors.min.js"></script>
    @Html.Partial("_Favicons")
</head>

<body>
    <nav class="top">
        <button class="circle transparent">
            <i>menu</i>
        </button>
        <div class="max"></div>
        <button class="circle transparent">
            <i>account_circle</i>
        </button>

    </nav>
    <nav class="bottom">
        <a>
            <i>home</i>
        </a>
        <a>
            <i>search</i>
        </a>
        <button class="square round extra">
            <i>add</i>
        </button>
        <a>
            <i>share</i>
        </a>
        <a>
            <i>more_vert</i>
        </a>
    </nav>

    <main class="responsive">
        @RenderBody()
    </main>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
